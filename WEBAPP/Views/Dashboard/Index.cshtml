    <!---chart section-->
    <section class="charts container-fluid">
        <div class="stats p-3 container">
            <div class="row ">
                <div class="col-lg-3 p-3">
                    <div class=" stat p-3 px-4 ">
                        <i class="fa fa-user-graduate mb-3" style="color: #10a84d;"></i>
                        <h5>@Model.Students Student</h5>
                    </div>
                </div>
                <div class="col-lg-3 p-3">
                    <div class=" stat p-3 px-4 ">
                        <i class="fa fa-arrow-right-arrow-left mb-3" style="color: #10a84d;"></i>
                        <h5>@Model.Relations Relation</h5>
                    </div>
                </div>
                <div class="col-lg-3 p-3">
                    <div class=" stat p-3 px-4 ">
                        <i class="fa fa-project-diagram" style="color: #10a84d;"></i>
                        <h5>@Model.Projects project</h5>
                    </div>
                </div>
                <div class="col-lg-3 p-3">
                    <div class=" stat p-3 px-4 ">
                        <i class="fa fa-book-atlas mb-3" style="color: #10a84d;"></i>
                        <h5>@Model.courses course</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="container pb-5">

            <div class="row">
                <div class="col-lg-12 mt-4">
                    <div class="chart p-4 bg-white ">
                        <h5>Top-Performing Students: Project Counts</h5>
                        <p>A Comparison of Students by Project Involvement</p>
                        <canvas id="barChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
                <div class="col-lg-8 mt-4">
                    <div class="chart p-4 bg-white  container-fluid">
                        <h5>A Visual Representation of Student Nationalities</h5>
                        <p>Nationality Distribution</p>
                        <div class="" id="geoChart" style="height: 300px; "></div>
                    </div>
                </div>
                <div class="col-lg-4 mt-4">
                    <div class="chart p-4 bg-white ">
                        <h5>Gender Distribution</h5>
                        <p>An Analysis of Gender Diversity.</p>
                        <canvas id="pieChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
                <div class="col-lg-8 mt-4">
                    <div class="chart p-4 bg-white ">
                        <h5>Project Progression Over Time</h5>
                        <p>Tracking the Growth of Projects Over Time.</p>
                        <canvas id="lineChart" style="max-height: 300px; "></canvas>
                    </div>
                </div>

                <div class="col-lg-4 mt-4">
                    <div class="chart p-4 bg-white ">
                        <h5>Top-Rated Courses: Student Favorites</h5>
                        <p>Analyzing Course Popularity Based on Likes and Ratings.</p>
                        <canvas id="doughnutChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </section>
